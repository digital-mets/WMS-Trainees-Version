        private void Filter()
        {
            if (Session["ColLCollType"] != null && (Session["ColLCustCode"] != null || Session["ColLBizAcct"] != null))
            //if (cbxCollType.Text != "" && (txtCustomerCode.Text != "" || txtBizAccount.Text != ""))
            {
                sdsRefTrans.ConnectionString = Session["ConnString"].ToString();
                if (Session["ColLCustCode"] != null && Session["ColLCustCode"].ToString() != "")
                //if (txtCustomerCode.Text != "")
                {
                    //Base filter on session 04-28 Era
                    sdsRefTrans.SelectCommand = 
                        "SELECT DISTINCT RecordID, TransType, DocNumber, DocDate, AccountCode, SubsiCode, ProfitCenter, CostCenter, BizPartnerCode, " +
                        "       ISNULL(Amount,0) - ISNULL(Applied,0) AS Amount, CounterDocNumber AS CounterReceiptNo " +
                        "  FROM Accounting.SubsiLedgerNonInv SL " +
                        " WHERE ISNULL(Applied,0) <> ISNULL(Amount,0) " +
                        "       AND BizPartnerCode = '" + Session["ColLCustCode"].ToString() + "'";
                        //"       AND BizPartnerCode = '" + txtCustomerCode.Value.ToString() + "'";
                }
                else if (Session["ColLBizAcct"] != null && Session["ColLBizAcct"].ToString() != "")
                //else if (txtBizAccount.Text != "")
                {
                    //Base filter on session 04-28 Era
                    sdsRefTrans.SelectCommand = 
                        "SELECT DISTINCT RecordID, TransType, DocNumber, DocDate, AccountCode, SubsiCode, ProfitCenter, CostCenter, SL.BizPartnerCode, " +
                        "       ISNULL(Amount,0) - ISNULL(Applied,0) AS Amount, CounterDocNumber AS CounterReceiptNo " +
                        "  FROM Accounting.SubsiLedgerNonInv SL LEFT JOIN Masterfile.BizPartner B ON SL.BizPartnerCode = B.BizPartnerCode " +
                        " WHERE ISNULL(Applied,0) <> ISNULL(Amount,0) " +
                        "       AND (B.BusinessAccountCode = '" + Session["ColLBizAcct"].ToString() + "' OR SL.BizPartnerCode = '" + Session["ColLBizAcct"].ToString() + "')";
                        //"       AND (B.BusinessAccountCode = '" + txtBizAccount.Value.ToString() + "' OR SL.BizPartnerCode = '" + txtBizAccount.Value.ToString() + "')";
                }

                switch (Session["ColLCollType"].ToString())
                //switch (cbxCollType.Value.ToString())
                {
                    case "T":
                        sdsRefTrans.SelectCommand = sdsRefTrans.SelectCommand +
                            "       AND SL.AccountCode IN ('1212','1216','1222','1226')";
                        break;
                    case "N":
